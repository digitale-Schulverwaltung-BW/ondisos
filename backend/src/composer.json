{
  "name": "app/anmeldung-backend",
  "description": "Schulanmeldungs-Backend mit SurveyJS Integration",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "ext-mysqli": "*",
    "ext-json": "*",
    "phpoffice/phpspreadsheet": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check": [
      "@test"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}