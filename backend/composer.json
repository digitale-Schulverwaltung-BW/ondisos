{
    "name": "ondisos/backend",
    "description": "Ondisos Backend - School Registration System Admin Interface",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "mpdf/mpdf": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:filter": "phpunit --filter"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
