# .env.example - Copy to .env and fill in your values

# Application
APP_ENV=production
APP_DEBUG=false

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=anmeldung
DB_USER=admin
DB_PASS=

# Session
SESSION_LIFETIME=3600
SESSION_SECURE=true

# Admin Authentication
# Set to true to enable login requirement (recommended for public networks)
AUTH_ENABLED=false
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=
# Generate password hash: php -r "echo password_hash('your-password', PASSWORD_DEFAULT);"

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,jpg,jpeg,png

# API (for frontend communication)
API_SECRET_KEY=

# Rate Limiting
# Protects API endpoints from abuse and DoS attacks
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=error
LOG_FILE=/var/log/anmeldung/app.log

# PDF Configuration
# Secret key for HMAC-based PDF download tokens (min 32 characters)
# Generate with: openssl rand -hex 32
PDF_TOKEN_SECRET=

# Auto-Expunge Settings
# Auto-delete archived entries after X days (0 = disabled)
AUTO_EXPUNGE_DAYS=90

# Automatically mark entries as "exportiert" when exported to Excel
AUTO_MARK_AS_READ=true